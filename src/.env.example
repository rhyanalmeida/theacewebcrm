# =====================================================
# ACE CRM BACKEND - ENVIRONMENT TEMPLATE
# =====================================================
# Copy this file to .env for development
# Replace all placeholder values with your actual credentials

# =====================================================
# üîß SERVER CONFIGURATION
# =====================================================
NODE_ENV=development
PORT=5000
HOST=localhost

# =====================================================
# üóÑÔ∏è SUPABASE CONFIGURATION
# =====================================================
# Get from: https://app.supabase.com/project/[project-id]/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# =====================================================
# üîê JWT & AUTHENTICATION
# =====================================================
# Generate using: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production-64-chars-minimum
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-64-chars-minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=your-session-secret-for-express-sessions-64-chars-minimum

# =====================================================
# üí≥ STRIPE CONFIGURATION
# =====================================================
# Test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-from-stripe
STRIPE_PRICE_ID=price_your-subscription-price-id

# =====================================================
# üìß EMAIL CONFIGURATION
# =====================================================
EMAIL_SERVICE=gmail
EMAIL_USER=your-business-email@gmail.com
EMAIL_PASSWORD=your-16-char-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=ACE CRM System

# Alternative SMTP configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false

# =====================================================
# üìÅ FILE UPLOAD CONFIGURATION
# =====================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,txt,csv,xls,xlsx

# =====================================================
# üõ°Ô∏è SECURITY & RATE LIMITING
# =====================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
AUTH_RATE_LIMIT=10
API_RATE_LIMIT=100
UPLOAD_RATE_LIMIT=5
TRUST_PROXY=false

# =====================================================
# üåê CORS & URL CONFIGURATION
# =====================================================
# Development URLs
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173
FRONTEND_URL=http://localhost:3000
CLIENT_PORTAL_URL=http://localhost:3001
API_BASE_URL=http://localhost:5000

# Production URLs (update with your domains)
PRODUCTION_FRONTEND_URL=https://your-frontend-domain.com
PRODUCTION_CLIENT_PORTAL_URL=https://your-portal-domain.com
PRODUCTION_API_URL=https://your-api-domain.com

# =====================================================
# üîó THIRD-PARTY INTEGRATIONS
# =====================================================
API_KEY=your-general-api-key-here
GOOGLE_API_KEY=your-google-api-key
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# =====================================================
# üìä MONITORING & ANALYTICS
# =====================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =====================================================
# üìù LOGGING CONFIGURATION
# =====================================================
LOG_LEVEL=info
LOG_FORMAT=combined
DEBUG=ace-crm:*

# =====================================================
# üöÄ FEATURE FLAGS
# =====================================================
ENABLE_STRIPE_PAYMENTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKETS=true