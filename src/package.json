{
  "name": "ace-crm-backend",
  "version": "1.0.0",
  "description": "ACE CRM Backend API - Enterprise CRM for Web Design Agencies",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node app.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/email/templates dist/email/templates 2>/dev/null || true",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t ace-crm-backend .",
    "docker:run": "docker run -p 3001:3001 ace-crm-backend",
    "migrate": "npm run build && node dist/scripts/migrate.js",
    "seed": "npm run build && node dist/scripts/seed.js"
  },
  "keywords": ["crm", "api", "nodejs", "typescript", "express", "supabase"],
  "author": "ACE Web Designers",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "stripe": "^18.4.0",
    "csv-parser": "^3.0.0",
    "fast-csv": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.16",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.6",
    "@types/lodash": "^4.14.201",
    "@types/validator": "^13.11.6",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}