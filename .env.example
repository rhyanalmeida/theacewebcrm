# =====================================================
# ACE CRM - ENVIRONMENT CONFIGURATION TEMPLATE
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file with real secrets to version control!

# =====================================================
# üîß SERVER CONFIGURATION
# =====================================================
NODE_ENV=development
PORT=5000
HOST=localhost
APP_NAME=ACE CRM
APP_DESCRIPTION=Enterprise CRM for Web Design Agencies

# =====================================================
# üóÑÔ∏è SUPABASE CONFIGURATION
# =====================================================
# Get these values from your Supabase project dashboard
# Project Settings > General > Project URL & API Keys
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Database connection string (optional for direct connections)
SUPABASE_DB_URL=postgresql://postgres.[project-ref]:[password]@aws-0-us-west-1.pooler.supabase.com:5432/postgres

# Supabase Storage configuration
SUPABASE_STORAGE_BUCKET=ace-crm-files
SUPABASE_STORAGE_URL=https://your-project-ref.supabase.co/storage/v1

# =====================================================
# üîê JWT & AUTHENTICATION CONFIGURATION
# =====================================================
# Generate strong secrets using: openssl rand -base64 64
# NEVER use these example values in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-64-chars-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-make-it-64-chars-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=your-session-secret-for-express-sessions-64-chars-recommended

# =====================================================
# üí≥ STRIPE PAYMENT CONFIGURATION
# =====================================================
# Test mode keys (replace with live keys in production)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here

# Webhook configuration
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-from-stripe-dashboard

# Product/Price IDs
STRIPE_PRICE_ID=price_your-default-subscription-price-id

# =====================================================
# üìß EMAIL CONFIGURATION
# =====================================================
# Method 1: Gmail with App Password (recommended for development)
EMAIL_SERVICE=gmail
EMAIL_USER=your-business-email@gmail.com
EMAIL_PASSWORD=your-16-char-app-password
EMAIL_FROM=noreply@acewebdesigners.com
EMAIL_FROM_NAME=ACE CRM System

# Method 2: Custom SMTP (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Method 3: Resend (recommended for production)
# RESEND_API_KEY=re_your-resend-api-key

# =====================================================
# üìÅ FILE UPLOAD CONFIGURATION
# =====================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,txt,csv,xls,xlsx,zip

# =====================================================
# üõ°Ô∏è RATE LIMITING & SECURITY
# =====================================================
# Rate limiting (requests per window)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_MESSAGE=Too many requests, please try again later

# Endpoint-specific rate limits
AUTH_RATE_LIMIT=10
API_RATE_LIMIT=100
UPLOAD_RATE_LIMIT=5

# Security settings
TRUST_PROXY=true
SECURE_COOKIES=false
SAME_SITE_COOKIES=lax

# =====================================================
# üåê CORS & URL CONFIGURATION
# =====================================================
# Development URLs (comma-separated, no spaces)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://localhost:3001

# Application URLs
FRONTEND_URL=http://localhost:3000
CLIENT_PORTAL_URL=http://localhost:3001
API_BASE_URL=http://localhost:5000/api

# Production URLs (update with your actual domains)
PRODUCTION_FRONTEND_URL=https://your-frontend-domain.com
PRODUCTION_CLIENT_PORTAL_URL=https://your-portal-domain.com
PRODUCTION_API_URL=https://your-api-domain.com

# =====================================================
# üîå WEBSOCKET CONFIGURATION
# =====================================================
WEBSOCKET_PORT=8000
WEBSOCKET_URL=ws://localhost:8000

# =====================================================
# üîó THIRD-PARTY INTEGRATIONS
# =====================================================
# General API key (for custom integrations)
API_KEY=your-general-api-key-here

# Google Services
GOOGLE_API_KEY=your-google-api-key-for-maps-calendar-etc
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# Zapier Integration
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =====================================================
# üìä ANALYTICS & MONITORING
# =====================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Performance monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
DATADOG_API_KEY=your-datadog-api-key

# User analytics
MIXPANEL_TOKEN=your-mixpanel-project-token

# =====================================================
# üóÉÔ∏è REDIS CONFIGURATION (Optional)
# =====================================================
# For session storage and caching
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =====================================================
# üìù LOGGING CONFIGURATION
# =====================================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=logs/app.log

# Debug settings
DEBUG=ace-crm:*
VERBOSE_LOGGING=false

# =====================================================
# üöÄ FEATURE FLAGS
# =====================================================
# Enable/disable features without code changes
ENABLE_STRIPE_PAYMENTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_WEBSOCKETS=true
ENABLE_ANALYTICS=true
ENABLE_CHAT_SYSTEM=true
ENABLE_SLACK_INTEGRATION=false
ENABLE_GOOGLE_INTEGRATION=false

# =====================================================
# üß™ DEVELOPMENT & TESTING
# =====================================================
# Development-specific settings
MOCK_EXTERNAL_APIS=false
BYPASS_AUTH_IN_TESTS=false
SEED_DATABASE=false

# =====================================================
# ‚òÅÔ∏è CLOUD & CDN CONFIGURATION
# =====================================================
# AWS S3 (alternative file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=ace-crm-files
AWS_REGION=us-east-1

# Cloudflare
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# =====================================================
# üíº BUSINESS CONFIGURATION
# =====================================================
# Your company details
CRM_COMPANY_NAME=ACE Web Designers
CRM_COMPANY_DOMAIN=acewebdesigners.com
CRM_ADMIN_EMAIL=admin@acewebdesigners.com
CRM_SUPPORT_EMAIL=support@acewebdesigners.com
CRM_DEFAULT_ROLE=user

# =====================================================
# üèóÔ∏è BUILD & DEPLOYMENT
# =====================================================
# Build configuration
BUILD_DIR=dist
PUBLIC_DIR=public

# Health check configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TOKEN=your-health-check-token